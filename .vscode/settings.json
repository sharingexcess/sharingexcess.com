{
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  // Add those two lines:
  "editor.formatOnSave": true, // Tell VSCode to format files on save
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "cSpell.words": [
    "designsystem",
    "formspree",
    "hotjar",
    "SEDS",
    "sharingexcess",
    "sharingexcessdotcom"
  ],
  "cSpell.ignoreWords": ["fontawesome", "fortawesome", "xeqnjkaq"] // Tell VSCode to use Prettier as default file formatter
}
